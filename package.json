{
  "name": "wakelock",
  "version": "1.0.0",
  "main": "docs/wakelock.min.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn docker\" \"yarn open\" \"yarn watch\" \"yarn css-dev\"",
    "prod": "yarn build && yarn css-prod",
    "docker": "docker-compose up",
    "down": "docker-compose down",
    "open": "open-cli http://localhost:8080",
    "build": "rollup -c --environment PRODUCTION",
    "watch": "rollup -c -w",
    "css-dev": "postcss sources/style.css > docs/style.min.css -w",
    "css-prod": "postcss sources/style.css > docs/style.min.css"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/runtime": "^7.13.10",
    "@rollup/plugin-babel": "^5.3.0",
    "concurrently": "^6.0.2",
    "core-js": "^3.10.1",
    "cssnano": "^5.0.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "open-cli": "^6.0.1",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "rollup": "^2.45.2",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2"
  }
}
